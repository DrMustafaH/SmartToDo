<!DOCTYPE html>
<html lang="en">

<head>
  <title>
    <%= name %>'s Dashboard
  </title>
  <script src="https://use.fontawesome.com/c76116c194.js"></script>
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/userDash.css" type="text/css" />
  <link rel="stylesheet" href="/styles/index.css" type="text/css" />
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/helpers.js"></script>
</head>

<body>
  <!-- Top Navbar -->
  <nav>
    <span class=appName>I-Do-It!</span>
    <span class="logged-user-name">Logged in as: <b>
        <%= name %>
      </b></span>
    <form class="logout-btn" method="POST" action="/logout">
      <button class="logout-btn">Logout</button>
    </form>
  </nav>
  <span id="date"></span>

  <!-- Filter bar -->
  <div class="filter">
    <button class="all-btn">All</button>
    <button data-category-id=1 class="buy-btn">buy</button>
    <button data-category-id=2 class="eat-btn">eat</button>
    <button data-category-id=3 class="read-btn">read</button>
    <button data-category-id=4 class="watch-btn">watch</button>
    <button class="completed-btn">completed</button>
  </div>

  <!-- Add-a-todo button  -->
  <button class="add-todo-btn"><i class="fa fa-plus" aria-hidden="true"> </i></button>

  <!-- Add-a-todo form -->
  <div class="add-background">
    <div class='add-form-container'>
      <h1>Add Todos!</h1>
      <small>Don't waste time just add and we categorize!</small>
      <form class="add-todo-form" action="/api/todos" method="POST">
        <div class='form-align'>
          <label for="todo">Todo:</label>
          <input type="text" class="note-add" name="new_todo" placeholder="Jot your ToDo" required>
        </div>
        <div class='form-align'>
          <label for="add-due-date">Due:</label>
          <input class="add-due-date" type="date" name="new_todo" required />
        </div>
        <button class="add-form-submit-btn" type="submit">Add Todo</button>
        <span class="checking"> Checking APIs, please be patient...</span>
        <div class="add-form-btns">
          <input class="add-form-reset-btn" type="reset" />
        </div>
      </form>
    </div>
  </div>

  <!-- Edit-a-todo form -->
  <div class="edit-background">
    <div class="edit-form">
      <h1>Edit Todos!</h1>
      <small>Small tweeks gets goals clearer!</small>
      <form>
        <label for="todo-title">Todo:</label>
        <input class="todo-title" placeholder="Todo" type="text" required />
        <label for="edit-due-date">Due:</label>
        <input class="edit-due-date" type="date" required />
        <label for="edit-due-date">Category:</label>
        <select class="edit-category" name="category">
          <option value="read">read</option>
          <option value="read">watch</option>
          <option value="read">eat</option>
          <option value="read">buy</option>
        </select>
        <div class="edit-form-btns">
          <input class="edit-form-submit-btn" type="submit" />
          <input class="edit-form-reset-btn" type="reset" />
        </div>
      </form>
    </div>
  </div>
  </div>

  <!-- Todo List -->
  <div class="markup-container"></div>

</body>
